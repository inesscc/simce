{
    "name": "Mnist_LeNet",
    "n_gpu": 1,
    "class_weights": [3.0, 1.0],
    "arch": {
        "type": "SimpleCNN",
        "args": {}
    },
    "data_loader_train": {
        "type": "TrainTestDataLoader",
        "args":{
            "data_file": "train.csv",
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "data_loader_test": {
        "type": "TrainTestDataLoader",
        "args":{
            "data_file": "test.csv",
            "batch_size": 128,
            "shuffle": false,
            "num_workers": 2
        }
    },
    "optimizer_adam": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "optimizer_sgd": {
        "type": "SGD",
        "args":{
            "lr": 0.004,
            "weight_decay": 0.001,
            "momentum": 0.9
        }
    },
    "loss": {
        "type": "CrossEntropyLoss",
        "args": {}
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}